<div class="autoscroll">
	<table class="list">
		<thead>
			<tr>
				<th>Seite</th>
				<th><%=t :field_sort %></th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			<% @wiki_pages.all.each do |page| %> 
				<tr class="<%= cycle("odd", "even") %>">
					<td><%= link_to page.wiki_page.title, {:controller => :pdf_documents_wiki_pages, :action => :edit, :project_id => @project, :pdf_document_id => @document, :id => page} %></td>
					<td align="center" style="width:15%;">
						<%= reorder_links(:pdf_documents_wiki_page, {:controller => :pdf_documents_wiki_pages, :action => :edit_order, :project_id => @project, :pdf_document_id => @document, :id => page}) %>
					</td>
					<td class="buttons">
						<%= link_to t(:link_edit), {:controller => :pdf_documents_wiki_pages, :action => :edit, :project_id => @project, :pdf_document_id => @document, :id => page}, :class => "icon icon-edit" %>
						<%= link_to t(:link_delete), {:controller => :pdf_documents_wiki_pages, :action => :delete, :project_id => @project, :pdf_document_id => @document, :id => page}, :class => "icon icon-del", :confirm => t(:text_are_you_sure) %>
					</td>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>
